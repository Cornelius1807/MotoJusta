# ============================================
# MotoJusta - Environment Variables
# ============================================

# --- Clerk Auth ---
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_PLACEHOLDER
CLERK_SECRET_KEY=sk_test_PLACEHOLDER
CLERK_WEBHOOK_SECRET=whsec_PLACEHOLDER
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/app
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/app

# --- Database (Neon Serverless / Supabase / any PostgreSQL) ---
DATABASE_URL=postgresql://user:password@host:5432/motojusta?sslmode=require

# --- Supabase (Storage) ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --- App Config ---
NEXT_PUBLIC_APP_NAME=MotoJusta
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_TIMEZONE=America/Lima

# --- Feature Flags Defaults ---
NEXT_PUBLIC_MVP_MODE=true

# --- AI (optional - for HU-33..HU-38) ---
# Leave empty to use mock/demo AI responses
OPENAI_API_KEY=
